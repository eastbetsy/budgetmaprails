<section class="chat-section">
  <h1>BudgetMap Chat</h1>
  <div id="messages" class="messages-container"></div>
  <input type="text" id="message-input" placeholder="Enter your name..." class="message-input">
  <div id="goal-buttons" class="goal-buttons" style="display: none;">
    <button onclick="selectGoal('Pay Off Debt')" class="btn btn-primary">Pay Off Debt</button>
    <button onclick="selectGoal('Emergency Fund')" class="btn btn-primary">Emergency Fund</button>
    <button onclick="selectGoal('Save for Retirement')" class="btn btn-primary">Save for Retirement</button>
  </div>
  <div id="rule-buttons" class="rule-buttons" style="display: none;">
    <button onclick="selectRule('50/30/20 Rule')" class="btn btn-primary">50/30/20 Rule</button>
    <button onclick="selectRule('70/20/10 Rule')" class="btn btn-primary">70/20/10 Rule</button>
    <button onclick="selectRule('80/20 Rule')" class="btn btn-primary">80/20 Rule</button>
  </div>
</section>